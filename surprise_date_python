from yelp.client import Client
from yelp.oauth1_authenticator import Oauth1Authenticator
import io


# read API keys
with io.open('/Users/Owner/Desktop/Colin/webdev/surprise-date/config_secret.json') as cred:
    creds = json.load(cred)
    auth = Oauth1Authenticator(**creds)
    client = Client(auth)

#see below link for other allowable parameters
#https://www.yelp.com/developers/documentation/v2/search_api
params = {
    'term': 'beer',
}

response = client.search_by_coordinates(40.788022, -74.399797, **params)
print(response.businesses[0].name)